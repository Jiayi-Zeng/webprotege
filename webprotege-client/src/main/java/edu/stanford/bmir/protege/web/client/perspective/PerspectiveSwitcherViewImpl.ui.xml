<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:with field="wp" type="edu.stanford.bmir.protege.web.resources.WebProtegeClientBundle"/>
    <ui:with field="msg" type="edu.stanford.bmir.protege.web.client.Messages"/>
    <ui:style>
        @external .gwt-TabBar, .gwt-TabBarItem, .gwt-TabBarFirst .gwt-TabBarItem-selected;
        .main {
            padding: 350px 5px;
            display: flex;
            flex-direction: column;
            flex-grow: 0;
            flex-shrink: 0;
            justify-content: space-evenly;
        }
        .menuButton {

        }</ui:style>
    <g:HTMLPanel addStyleNames="{style.main}" debugId="PerspectiveSwitcher">
        <g:Button ui:field="classesButton" text="Class" addStyleNames="{style.menuButton}"/>
        <g:Button ui:field="propertiesButton" text="Property" addStyleNames="{style.menuButton}"/>
        <g:Button ui:field="individualButton" text="Individual" addStyleNames="{style.menuButton}"/>
        <g:Button ui:field="settingButton" text="Setting" addStyleNames="{style.menuButton}"/>
    </g:HTMLPanel>
</ui:UiBinder>

