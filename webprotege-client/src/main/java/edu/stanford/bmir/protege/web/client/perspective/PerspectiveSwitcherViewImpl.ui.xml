<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:with field="wp" type="edu.stanford.bmir.protege.web.resources.WebProtegeClientBundle"/>
    <ui:with field="msg" type="edu.stanford.bmir.protege.web.client.Messages"/>
    <ui:style>
        .main {
            padding: 10px;
            padding-top: 75px;
            display: flex;
            flex-direction: column;
            flex-grow: 0;
            flex-shrink: 0;
            justify-content: space-evenly;
        }
        .menuButton {
            width: 2.5em;
            height: 2.5em;
        }</ui:style>
    <g:HTMLPanel addStyleNames="{style.main}" debugId="PerspectiveSwitcher">
        <g:VerticalPanel ui:field="sideBar"/>
        <div class="{wp.style.sideBarSettingPanelIcon}">
            <g:Button ui:field="settingButton" addStyleNames="{style.menuButton}"/>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>

