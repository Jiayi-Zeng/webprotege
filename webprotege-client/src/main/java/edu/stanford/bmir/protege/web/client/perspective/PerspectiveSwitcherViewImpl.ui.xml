<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:with field="wp" type="edu.stanford.bmir.protege.web.resources.WebProtegeClientBundle"/>
    <ui:with field="msg" type="edu.stanford.bmir.protege.web.client.Messages"/>
    <ui:style>
        .main {
            padding: 5px;
            display: flex;
            flex-direction: column;
            flex-grow: 0;
            flex-shrink: 0;
            justify-content: space-evenly;
        }
        .menuButton {

        }</ui:style>
    <g:HTMLPanel addStyleNames="{style.main}" debugId="PerspectiveSwitcher">
        <g:VerticalPanel ui:field="sideBar" addStyleNames="{style.menuButton}"/>
        <g:Button ui:field="settingButton" text="Setting" addStyleNames="{style.menuButton}"/>
    </g:HTMLPanel>
</ui:UiBinder>

