<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:with field="wp" type="edu.stanford.bmir.protege.web.resources.WebProtegeClientBundle"/>
    <ui:style>
        .main {
            width: 9em;
            height: 5em;
            background-color: #C5D3E0;
            background-size: 3.2em;
            background-repeat: no-repeat;
            background-position-x: center;
            background-position-y: 0.35em;
            border-color: literal("var(--alternate--separator--color)");
            border: 1px solid;
        }
        .label {
            padding-top: 3.6em;
        }
    </ui:style>
    <g:HTMLPanel addStyleNames="{style.main} {wp.buttons.btnGlyph}">
        <g:Label ui:field="label" addStyleNames="{style.label}"/>
    </g:HTMLPanel>
</ui:UiBinder>